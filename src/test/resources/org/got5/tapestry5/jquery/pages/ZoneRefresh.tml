<html t:type="layout"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	xmlns:p="tapestry:parameter">


<div class="row">
	<div class="span12">
		<section id="list" style="padding-top: 30px;">
			<div class="page-header">
				<h1>ZoneRefresh</h1>
			</div>
			<t:zone t:id="clickZone" t:mixins="jquery/ZoneRefresh" t:period="2">
   		 		${i}
   			</t:zone>
			<p>
				<a id="stop">Stop Refreshing the Zone</a>
			</p>
			<p>
				<a id="start">Start Refreshing the Zone</a>
			</p>
		</section>
	</div>
</div>
</html>