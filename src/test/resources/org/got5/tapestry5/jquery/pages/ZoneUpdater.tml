<html t:type="layout"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	xmlns:p="tapestry:parameter">


<div class="row">
	<div class="span12">
		<section id="list" style="padding-top: 30px;">
			<div class="page-header">
				<h1>Zone Updater</h1>
			</div>
			<form t:type="form">
				First Name: <input t:type="TextField" t:id="firstName"
					t:mixins="jquery/zoneUpdater" t:clientEvent="keyup"
					t:event="firstNameChanged" t:zone="nameZone" /><br /> Last Name: <input
					t:type="TextField" t:id="lastName" t:mixins="jquery/zoneUpdater"
					t:clientEvent="keyup" t:event="lastNameChanged" t:zone="nameZone" /><br />
				<br />

				<t:zone t:id="nameZone" id="nameZone">
      Welcome ${name}.
    </t:zone>
				<br /> Note that the following time field does not update because
				it's not in the zone: ${time}<br />

			</form>
		</section>
	</div>
</div>
</html>